<ShadowProfile Condition="Data.HasCompletedQuest('A Hunter\'s Boast') == false">

	<!-- Bot settings -->
	<SetBaseSettings />
    <SetEnableVendoring Value="true"/>
    <SetVendorNpc NpcName="Kat Sampson"/>
    <SetVendorSlotsCount Value="2" />
    <SetEnableRepairing Value="true"/>
    <SetRepairNpc NpcName="Kat Sampson"/>
    <SetRepairPercent Value="35" />
	
	<!-- Restock Loch Modan 18 - 20 (Thelsmar)-->
	<SetEnableRestockItems Value="true"/>
	<ClearRestockItems/>
	<!-- Food -->
	<If Condition="Data.PlayerClass() == WoWClass.Rogue or Data.PlayerClass() == WoWClass.Warrior or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock">
		<AddRestockItem ItemName="Freshly Baked Bread" NpcName="Innkeeper Hearthstove" UnderAmount="5" BuyAmount="40"/>
		<AddDoNotSellItem ItemName="Freshly Baked Bread" />
	</If>
	<!-- Water -->
	<If Condition="Data.PlayerClass() == WoWClass.Druid or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock or Data.PlayerClass() == WoWClass.Paladin">
		<AddRestockItem ItemName="Ice Cold Milk" NpcName="Xander Goodbeard" UnderAmount="5" BuyAmount="40"/>
		<AddDoNotSellItem ItemName="Ice Cold Milk" />
	</If>
	<If Condition="Data.PlayerClass() == WoWClass.Priest">
		<AddRestockItem ItemName="Ice Cold Milk" NpcName="Xander Goodbeard" UnderAmount="3" BuyAmount="20"/>
		<AddDoNotSellItem ItemName="Ice Cold Milk" />
	</If>
	<!-- Bullets/Arrows -->
	<If Condition="IsEquippedItemType('Gun') == true and Data.PlayerClass() == WoWClass.Hunter">
		<AddRestockItem ItemName="Heavy Shot" NpcName="Xander Goodbeard" UnderAmount="100" BuyAmount="1200"/>
	</If>
	<If Condition="IsEquippedItemType('Bow') == true and Data.PlayerClass() == WoWClass.Hunter">
		<AddRestockItem ItemName="Sharp Arrow" NpcName="Xander Goodbeard" UnderAmount="100" BuyAmount="1200"/>
	</If>
	<If Condition="IsEquippedItemType('Crossbow') == true and Data.PlayerClass() == WoWClass.Hunter">
		<AddRestockItem ItemName="Sharp Arrow" NpcName="Xander Goodbeard" UnderAmount="100" BuyAmount="1200"/>
	</If>
	<!-- End Restock -->
	
	<!-- TakeQuest -->
	<If Condition="Data.HasActiveQuest('Excavation Progress Report') == false and Data.HasCompletedQuest('Excavation Progress Report') == false">
		<TakeQuest NpcName="Prospector Ironband" QuestId="298" QuestName="Excavation Progress Report" />
	</If> 		
    <If Condition="Data.HasActiveQuest('Find Bingles') == true">
        <ReturnQuest NpcName="Bingles Blastenheimer" QuestId="2039" QuestName="Find Bingles" />
    </If>	
	<If Condition="Data.HasActiveQuest('A Hunter\'s Boast') == false and Data.HasCompletedQuest('A Hunter\'s Boast') == false">	
		<TakeQuest NpcName="Daryl the Youngling" QuestId="257" QuestName="A Hunter\'s Boast" />
	</If>	

	<!-- QuestObjective -->
	<If Condition="Data.HasActiveQuest('A Hunter\'s Boast') == true and Data.AllQuestObjectivesAreComplete('A Hunter\'s Boast') == false">
		<ClearHotspots />
		<!-- Blackspots -->

		<!-- Hotspots -->
		<AddHotspot X="-5584.7451171875" Y="-4210.3774414063" Z="381.03863525391" Range="100" />
		<AddHotspot X="-5676.1123046875" Y="-4201.0673828125" Z="387.04403686523" Range="100" />
		<AddHotspot X="-5740.0771484375" Y="-4083.4038085938" Z="372.0446472168" Range="100" />
		<AddHotspot X="-5800.2802734375" Y="-4052.3557128906" Z="373.75424194336" Range="100" />
		<AddHotspot X="-5846.5712890625" Y="-4120.1865234375" Z="388.85232543945" Range="100" />
		<AddHotspot X="-5692.1860351563" Y="-4205.775390625" Z="385.42315673828" Range="100" />
		<AddHotspot X="-5583.7915039063" Y="-4115.875" Z="377.64367675781" Range="100" />
		<AddHotspot X="-5675.9282226563" Y="-4133.3959960938" Z="392.40502929688" Range="100" />

		<SetTargetingMode Mode="Around Points" />
		<!-- Mob Whitelist -->
		<ClearMonsterFilter/>
		<SetMonsterFilterMode Mode="Whitelist" />
		<AddMonsterFilterName Value="Mountain Buzzard" />		
		<While Condition="Data.AllQuestObjectivesAreComplete('A Hunter\'s Boast') == false" >
			<Wait Value="100" />
		</While>
	</If>


	<If Condition="Data.HasActiveQuest('A Hunter\'s Boast') == true and Data.AllQuestObjectivesAreComplete('A Hunter\'s Boast') == true">
        <ReturnQuest NpcName="Daryl the Youngling" QuestId="257" QuestName="A Hunter\'s Boast" />
    </If>

	
</ShadowProfile>