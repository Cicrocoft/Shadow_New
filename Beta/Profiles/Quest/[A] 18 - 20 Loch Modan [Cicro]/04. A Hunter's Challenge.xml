<ShadowProfile Condition="Data.HasCompletedQuest('A Hunter\'s Challenge') == false and Data.HasCompletedQuest('A Hunter\'s Boast') == true">

	<!-- Bot settings -->
	<SetBaseSettings />
    <SetEnableVendoring Value="true"/>
    <SetVendorNpc NpcName="Kat Sampson"/>
    <SetVendorSlotsCount Value="2" />
    <SetEnableRepairing Value="true"/>
    <SetRepairNpc NpcName="Kat Sampson"/>
    <SetRepairPercent Value="35" />
	
	<!-- Restock Loch Modan 18 - 20 (Thelsmar)-->
	<SetEnableRestockItems Value="true"/>
	<ClearRestockItems/>
	<!-- Food -->
	<If Condition="Data.PlayerClass() == WoWClass.Rogue or Data.PlayerClass() == WoWClass.Warrior or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock">
		<AddRestockItem ItemName="Freshly Baked Bread" NpcName="Innkeeper Hearthstove" UnderAmount="5" BuyAmount="40"/>
		<AddDoNotSellItem ItemName="Freshly Baked Bread" />
	</If>
	<!-- Water -->
	<If Condition="Data.PlayerClass() == WoWClass.Druid or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock or Data.PlayerClass() == WoWClass.Paladin">
		<AddRestockItem ItemName="Ice Cold Milk" NpcName="Xander Goodbeard" UnderAmount="5" BuyAmount="40"/>
		<AddDoNotSellItem ItemName="Ice Cold Milk" />
	</If>
	<If Condition="Data.PlayerClass() == WoWClass.Priest">
		<AddRestockItem ItemName="Ice Cold Milk" NpcName="Xander Goodbeard" UnderAmount="3" BuyAmount="20"/>
		<AddDoNotSellItem ItemName="Ice Cold Milk" />
	</If>
	<!-- Bullets/Arrows -->
	<If Condition="IsEquippedItemType('Gun') == true and Data.PlayerClass() == WoWClass.Hunter">
		<AddRestockItem ItemName="Heavy Shot" NpcName="Xander Goodbeard" UnderAmount="100" BuyAmount="1200"/>
	</If>
	<If Condition="IsEquippedItemType('Bow') == true and Data.PlayerClass() == WoWClass.Hunter">
		<AddRestockItem ItemName="Sharp Arrow" NpcName="Xander Goodbeard" UnderAmount="100" BuyAmount="1200"/>
	</If>
	<If Condition="IsEquippedItemType('Crossbow') == true and Data.PlayerClass() == WoWClass.Hunter">
		<AddRestockItem ItemName="Sharp Arrow" NpcName="Xander Goodbeard" UnderAmount="100" BuyAmount="1200"/>
	</If>
	<!-- End Restock -->
	
	<!-- TakeQuest -->
	<If Condition="Data.HasActiveQuest('A Hunter\'s Challenge') == false and Data.HasCompletedQuest('A Hunter\'s Challenge') == false and Data.HasCompletedQuest('A Hunter\'s Boast') == true">	
		<TakeQuest NpcName="Daryl the Youngling" QuestId="258" QuestName="A Hunter\'s Challenge" />
	</If>	

	<!-- QuestObjective -->
	<If Condition="Data.HasActiveQuest('A Hunter\'s Challenge') == true and Data.AllQuestObjectivesAreComplete('A Hunter\'s Challenge') == false">
		<ClearHotspots />
		<!-- Blackspots -->

		<!-- Hotspots -->
		<AddHotspot X="-5449.9233398438" Y="-4071.7155761719" Z="351.95321655273" Range="100" />
		<AddHotspot X="-5354.1518554688" Y="-4069.1899414063" Z="331.35076904297" Range="100" />
		<AddHotspot X="-5265.8139648438" Y="-4032.3610839844" Z="328.15142822266" Range="100" />
		<AddHotspot X="-5211.0327148438" Y="-3908.5617675781" Z="334.22827148438" Range="100" />
		<AddHotspot X="-5182.4794921875" Y="-3866.4914550781" Z="331.69415283203" Range="100" />
		<AddHotspot X="-5229.3017578125" Y="-3811.994140625" Z="317.15292358398" Range="100" />
		<AddHotspot X="-5213.7895507813" Y="-3700.9948730469" Z="308.65130615234" Range="100" />

		<SetTargetingMode Mode="Around Points" />
		<!-- Mob Whitelist -->
		<ClearMonsterFilter/>
		<SetMonsterFilterMode Mode="Whitelist" />
		<AddMonsterFilterName Value="Elder Mountain Boar" />		
		<While Condition="Data.AllQuestObjectivesAreComplete('A Hunter\'s Challenge') == false" >
			<Wait Value="100" />
		</While>
	</If>


	<If Condition="Data.HasActiveQuest('A Hunter\'s Challenge') == true and Data.AllQuestObjectivesAreComplete('A Hunter\'s Challenge') == true">
        <ReturnQuest NpcName="Daryl the Youngling" QuestId="258" QuestName="A Hunter\'s Challenge" />
    </If>

	
</ShadowProfile>