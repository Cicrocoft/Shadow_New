<ShadowProfile Condition="Data.HasCompletedQuest('A Favor for Evershine') == false">

    <SetBaseSettings />	<!-- Restock Dun Morogh 5-12 (Evershine)-->	<SetEnableRestockItems Value="true"/>	<ClearRestockItems/>	<!-- Food -->	<If Condition="Data.PlayerClass() == WoWClass.Rogue or Data.PlayerClass() == WoWClass.Warrior or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock">		<AddRestockItem ItemName="Tough Hunk of Bread" NpcName="Innkeeper Belm" UnderAmount="5" BuyAmount="40"/>		<AddDoNotSellItem ItemName="Tough Hunk of Bread" />	</If>	<!-- Water -->	<If Condition="Data.PlayerClass() == WoWClass.Druid or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock or Data.PlayerClass() == WoWClass.Paladin">		<AddRestockItem ItemName="Refreshing Spring Water" NpcName="Keeg Gibn" UnderAmount="5" BuyAmount="40"/>		<AddDoNotSellItem ItemName="Refreshing Spring Water" />	</If>	<If Condition="Data.PlayerClass() == WoWClass.Priest">		<AddRestockItem ItemName="Refreshing Spring Water" NpcName="Keeg Gibn" UnderAmount="3" BuyAmount="20"/>		<AddDoNotSellItem ItemName="Refreshing Spring Water" />	</If>	<!-- Bullets/Arrows -->	<If Condition="IsEquippedItemType('Gun') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Light Shot" NpcName="Kreg Bilmn" UnderAmount="100" BuyAmount="600"/>	</If>	<If Condition="IsEquippedItemType('Bow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Kreg Bilmn" UnderAmount="100" BuyAmount="600"/>	</If>	<If Condition="IsEquippedItemType('Crossbow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Kreg Bilmn" UnderAmount="100" BuyAmount="600"/>	</If>	<!-- End Restock -->
    <If Condition="Data.HasActiveQuest('A Favor for Evershine') == false">
        <TakeQuest NpcName="Rejold Barleybrew" QuestName="A Favor for Evershine" />
    </If>


	<SetBaseSettings />
    <SetEnableVendoring Value="true"/>
    <SetVendorNpc NpcName="Keeg Gibn"/>
    <SetVendorSlotsCount Value="2" />
    <SetEnableRepairing Value="true"/>
    <SetRepairNpc NpcName="Burdrak Harglhelm"/>
    <SetRepairPercent Value="35" />
    <ClearHotspots />
		<AddHotspot X="-5615.369140625" Y="337.10000610352" Z="388.22503662109" Range="100" />
		<AddHotspot X="-5441.5522460938" Y="458.7287902832" Z="383.72210693359" Range="100" />
		<AddHotspot X="-5266.4458007813" Y="331.88858032227" Z="396.65130615234" Range="100" />
    <SetTargetingMode Mode="Around Points" />
    <ClearMonsterFilter/>
    <SetMonsterFilterMode Mode="Whitelist" />
    <AddMonsterFilterName Value="Ice Claw Bear" />
    <AddMonsterFilterName Value="Elder Crag Boar" />
    <AddMonsterFilterName Value="Snow Leopard" />	
	
    <While Condition="Data.QuestObjectiveIsComplete('A Favor for Evershine', 2) == false" >
        <Wait Value="100" />
    </While>	
    <ClearMonsterFilter/>
    <SetMonsterFilterMode Mode="Whitelist" />
    <AddMonsterFilterName Value="Ice Claw Bear" />
    <AddMonsterFilterName Value="Snow Leopard" />	
	
    <While Condition="Data.QuestObjectiveIsComplete('A Favor for Evershine', 1) == false" >
        <Wait Value="100" />
    </While>
    <ClearMonsterFilter/>
    <SetMonsterFilterMode Mode="Whitelist" />
    <AddMonsterFilterName Value="Snow Leopard" />	
	
    <While Condition="Data.QuestObjectiveIsComplete('A Favor for Evershine', 3) == false" >
        <Wait Value="100" />
    </While>

    <If Condition="Data.HasActiveQuest('A Favor for Evershine') == true">
        <ReturnQuest NpcName="Rejold Barleybrew" QuestName="A Favor for Evershine" />
    </If>
</ShadowProfile>