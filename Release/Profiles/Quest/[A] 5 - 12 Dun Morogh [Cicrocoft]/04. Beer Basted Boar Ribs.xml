<ShadowProfile Condition="Data.HasCompletedQuest('Beer Basted Boar Ribs') == false">
    <SetBaseSettings />	<!-- Restock Dun Morogh 5-12 (Kharanos)-->	<SetEnableRestockItems Value="true"/>	<ClearRestockItems/>	<!-- Food -->	<If Condition="GetMoney() &gt;= 700" >		<If Condition="Data.PlayerClass() == WoWClass.Rogue or Data.PlayerClass() == WoWClass.Warrior or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock">			<AddRestockItem ItemName="Tough Hunk of Bread" NpcName="Innkeeper Belm" UnderAmount="5" BuyAmount="40"/>			<AddDoNotSellItem ItemName="Tough Hunk of Bread" />		</If>		<!-- Water -->		<If Condition="Data.PlayerClass() == WoWClass.Druid or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock or Data.PlayerClass() == WoWClass.Paladin">			<AddRestockItem ItemName="Refreshing Spring Water" NpcName="Innkeeper Belm" UnderAmount="5" BuyAmount="40"/>			<AddDoNotSellItem ItemName="Refreshing Spring Water" />		</If>		<If Condition="Data.PlayerClass() == WoWClass.Priest">			<AddRestockItem ItemName="Refreshing Spring Water" NpcName="Innkeeper Belm" UnderAmount="3" BuyAmount="20"/>			<AddDoNotSellItem ItemName="Refreshing Spring Water" />		</If>	</If>				<!-- Bullets/Arrows -->	<If Condition="IsEquippedItemType('Gun') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Light Shot" NpcName="Kreg Bilmn" UnderAmount="100" BuyAmount="600"/>	</If>	<If Condition="IsEquippedItemType('Bow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Kreg Bilmn" UnderAmount="100" BuyAmount="600"/>	</If>	<If Condition="IsEquippedItemType('Crossbow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Kreg Bilmn" UnderAmount="100" BuyAmount="600"/>	</If>	<!-- End Restock -->
    <If Condition="Data.HasActiveQuest('Beer Basted Boar Ribs') == false">
        <TakeQuest NpcName="Ragnar Thunderbrew" QuestName="Beer Basted Boar Ribs" />
    </If>
    
	<SetBaseSettings />
    <SetEnableVendoring Value="true"/>
    <SetVendorNpc NpcName="Innkeeper Belm"/>
    <SetVendorSlotsCount Value="2" />
    <SetEnableRepairing Value="true"/>
    <SetRepairNpc NpcName="Grawn Thromwyn"/>
    <SetRepairPercent Value="35" />
	<SetEnableRestockItems Value="true"/>
	<AddDoNotSellItem ItemName="Crag Boar Rib" />
    <ClearHotspots />	<AddHotspot X="-5774.033203125" Y="-377.84387207031" Z="365.30908203125" Range="100" />	<AddHotspot X="-5821.5307617188" Y="-252.96669006348" Z="352.78833007813" Range="100" />	<AddHotspot X="-5836.3403320313" Y="-137.17565917969" Z="355.21325683594" Range="100" />	<AddHotspot X="-5987.9750976563" Y="-138.80838012695" Z="401.34506225586" Range="50" />	<AddHotspot X="-6028.8286132813" Y="-266.03848266602" Z="417.46395874023" Range="50" />	<AddHotspot X="-6010.6342773438" Y="-402.2731628418" Z="412.39492797852" Range="100" />
    <SetTargetingMode Mode="Around Points" />
    <ClearMonsterFilter/>
    <SetMonsterFilterMode Mode="Whitelist" />
    <AddMonsterFilterName Value="Crag Boar" />
    <AddMonsterFilterName Value="Young Black Bear" />
    <AddMonsterFilterName Value="Ice Claw Bear" />	
    <AddMonsterFilterName Value="Large Crag Boar" />	
    <While Condition="Data.QuestObjectiveIsComplete('Beer Basted Boar Ribs', 1) == false" >
        <Wait Value="100" />
    </While>	
    <ClearHotspots />
	<ClearRestockItems/>
		<AddRestockItem ItemName="Rhapsody Malt" NpcName="Innkeeper Belm" UnderAmount="0" BuyAmount="1"/>
		<AddHotspot X="-5599.17578125" Y="-530.15808105469" Z="399.65188598633" Range="5" />
    <While Condition="Data.QuestObjectiveIsComplete('Beer Basted Boar Ribs', 2) == false" >
        <Wait Value="100" />
    </While>	
	<ClearRestockItems/>	
    <If Condition="Data.HasActiveQuest('Beer Basted Boar Ribs') == true">
        <ReturnQuest NpcName="Ragnar Thunderbrew" QuestName="Beer Basted Boar Ribs" />
    </If>
	

</ShadowProfile>