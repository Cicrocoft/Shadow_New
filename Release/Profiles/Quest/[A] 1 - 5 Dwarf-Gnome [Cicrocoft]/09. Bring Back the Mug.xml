<ShadowProfile Condition="Data.HasCompletedQuest('Bring Back the Mug') == false">
	<SetBaseSettings />	<!-- Restock Dun Morogh 1-5 -->	<SetEnableRestockItems Value="true"/>	<ClearRestockItems/>	<!-- Food -->	<!-- Water -->	<!-- Bullets/Arrows -->	<If Condition="IsEquippedItemType('Gun') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Light Shot" NpcName="Adlin Pridedrift" UnderAmount="100" BuyAmount="1200"/>	</If>	<If Condition="IsEquippedItemType('Bow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Adlin Pridedrift" UnderAmount="100" BuyAmount="1200"/>	</If>	<If Condition="IsEquippedItemType('Crossbow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Adlin Pridedrift" UnderAmount="100" BuyAmount="1200"/>	</If>	<!-- End Restock -->
    <If Condition="Data.HasActiveQuest('Scalding Mornbrew Delivery') == false">
        <TakeQuest NpcName="Durnan Furcutter" QuestName="Bring Back the Mug" />
    </If>
    <If Condition="Data.HasActiveQuest('A Refugee\'s Quandary') == false and Data.HasCompletedQuest('Bring Back the Mug') == false">
        <TakeQuest NpcName="Felix Whindlebolt" QuestName="A Refugee\'s Quandary" />
    </If>    
    <ReturnQuest NpcName="Nori Pridedrift" QuestName="Bring Back the Mug" />
</ShadowProfile>