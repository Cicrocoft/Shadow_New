	<!-- Restock Dun Morogh 1-5 -->	<SetEnableRestockItems Value="true"/>	<ClearRestockItems/>	<!-- Food -->	<!-- Water -->	<!-- Bullets/Arrows -->	<If Condition="IsEquippedItemType('Gun') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Light Shot" NpcName="Adlin Pridedrift" UnderAmount="100" BuyAmount="600"/>	</If>	<If Condition="IsEquippedItemType('Bow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Adlin Pridedrift" UnderAmount="100" BuyAmount="600"/>	</If>	<If Condition="IsEquippedItemType('Crossbow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Adlin Pridedrift" UnderAmount="100" BuyAmount="600"/>	</If>	<!-- End Restock -->
    <If Condition="Data.HasActiveQuest('A Refugee\'s Quandary') == false and Data.HasCompletedQuest('A Refugee\'s Quandary') == false">
        <TakeQuest NpcName="Felix Whindlebolt" QuestName="A Refugee\'s Quandary" />
    </If>
    <If Condition="Data.HasActiveQuest('The Troll Cave') == false and Data.HasCompletedQuest('The Troll Cave') == false">
        <TakeQuest NpcName="Grelin Whitebeard" QuestName="The Troll Cave" />
    </If>	


	<While Condition="Data.HasActiveQuest('A Refugee\'s Quandary') == true and Data.QuestObjectiveIsComplete('A Refugee\'s Quandary', 1) == false" >			<ClearHotspots />		<If Condition="Nav.RangeFromMeXYZ(-6374.6674804688, 772.89270019531, 386.21249389648) > 2">			<MoveTo X="-6374.6674804688" Y="772.89270019531" Z="386.21249389648" />		</If>		<SetEnableAutoLoot Value="true"/>		<InteractWithClosestGameObject />		<BotSleep Value="3000"/>	</While>	<While Condition="Data.HasActiveQuest('A Refugee\'s Quandary') == true and Data.QuestObjectiveIsComplete('A Refugee\'s Quandary', 2) == false" >			<ClearHotspots />		<If Condition="Nav.RangeFromMeXYZ(-6503.2587890625, 680.07800292969, 387.55783081055) > 2">			<MoveTo X="-6503.2587890625" Y="680.07800292969" Z="387.55783081055" />		</If>		<SetEnableAutoLoot Value="true"/>		<InteractWithClosestGameObject />		<BotSleep Value="3000"/>	</While>
	<While Condition="Data.HasActiveQuest('A Refugee\'s Quandary') == true and Data.QuestObjectiveIsComplete('A Refugee\'s Quandary', 3) == false" >			<ClearHotspots />		<If Condition="Nav.RangeFromMeXYZ(-6479.3168945313, 506.45034790039, 385.91589355469) > 2">			<MoveTo X="-6479.3168945313" Y="506.45034790039" Z="385.91589355469" />		</If>		<SetEnableAutoLoot Value="true"/>		<InteractWithClosestGameObject />		<BotSleep Value="3000"/>	</While>
	<If Condition="Data.HasActiveQuest('The Troll Cave') == true">
	<SetBaseSettings />
    <SetEnableVendoring Value="true"/>
    <SetVendorNpc NpcName="Adlin Pridedrift"/>
    <SetVendorSlotsCount Value="2" />
    <SetEnableRepairing Value="true"/>
    <SetRepairNpc NpcName="Rybrad Coldbank"/>
    <SetRepairPercent Value="35" />

