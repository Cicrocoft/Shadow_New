<ShadowProfile Condition="Data.HasCompletedQuest('The Jasperlode Mine') == false">
	<!-- Vendor Settings -->	<SetBaseSettings />	    <SetEnableVendoring Value="true"/>    <SetVendorNpc NpcName="Andrew Krighton"/>    <SetVendorSlotsCount Value="1" />    <SetEnableRepairing Value="true"/>    <SetRepairNpc NpcName="Andrew Krighton"/>    <SetRepairPercent Value="35" />	<!-- Restock Elwynn Forest 5-12 Goldshire -->	<SetEnableRestockItems Value="true"/>	<ClearRestockItems/>	<!-- Food -->	<If Condition="Data.PlayerClass() == WoWClass.Rogue or Data.PlayerClass() == WoWClass.Warrior or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock">		<AddRestockItem ItemName="Darnassian Bleu" NpcName="Innkeeper Farley" UnderAmount="5" BuyAmount="40"/>		<AddDoNotSellItem ItemName="Darnassian Bleu" />	</If>	<!-- Water -->	<If Condition="Data.PlayerClass() == WoWClass.Druid or Data.PlayerClass() == WoWClass.Hunter or Data.PlayerClass() == WoWClass.Warlock or Data.PlayerClass() == WoWClass.Paladin">		<AddRestockItem ItemName="Refreshing Spring Water" NpcName="Innkeeper Farley" UnderAmount="5" BuyAmount="40"/>		<AddDoNotSellItem ItemName="Refreshing Spring Water" />	</If>	<If Condition="Data.PlayerClass() == WoWClass.Priest">		<AddRestockItem ItemName="Refreshing Spring Water" NpcName="Innkeeper Farley" UnderAmount="3" BuyAmount="20"/>		<AddDoNotSellItem ItemName="Refreshing Spring Water" />	</If>	<!-- Bullets/Arrows -->	<If Condition="IsEquippedItemType('Gun') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Light Shot" NpcName="Brog Hamfist" UnderAmount="100" BuyAmount="600"/>	</If>	<If Condition="IsEquippedItemType('Bow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Brog Hamfist" UnderAmount="100" BuyAmount="600"/>	</If>	<If Condition="IsEquippedItemType('Crossbow') == true and Data.PlayerClass() == WoWClass.Hunter">		<AddRestockItem ItemName="Rough Arrow" NpcName="Brog Hamfist" UnderAmount="100" BuyAmount="600"/>	</If>	<!-- End Restock -->
	<!-- Pickup -->
	<If Condition="Data.HasActiveQuest('The Jasperlode Mine') == false and Data.HasCompletedQuest('The Jasperlode Mine') == false">
		<TakeQuest NpcName="Marshal Dughan" QuestId="76" QuestName="The Jasperlode Mine" />
	</If>	
	
	<!-- Quset Completion -->
	<If Condition="Data.HasActiveQuest('The Jasperlode Mine') == true and Data.HasCompletedQuest('The Jasperlode Mine') == false">
		<ClearHotspots />
		<!-- Blackspots -->
		<AddBlackspot X="-9300.9091796875" Y="-287.78863525391" Z="70.903450012207" Range="30" />
		<!-- Hotspots -->
		<AddHotspot X="-9115.982421875" Y="-568.14587402344" Z="59.102584838867" Range="10" />
		<AddHotspot X="-9096.8115234375" Y="-565.29705810547" Z="62.226535797119" Range="10" />		
		<While Condition="Data.AllQuestObjectivesAreComplete('The Jasperlode Mine') == false" >
				<Wait Value="100" />
		</While>	
	</If>

    <If Condition="Data.HasActiveQuest('The Jasperlode Mine') == true and Data.AllQuestObjectivesAreComplete('The Jasperlode Mine') == true">	
		<ReturnQuest NpcName="Marshal Dughan" QuestId="76" QuestName="The Jasperlode Mine" />
	</If>
</ShadowProfile>