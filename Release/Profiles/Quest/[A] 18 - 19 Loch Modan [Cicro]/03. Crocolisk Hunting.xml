	</If>
	<If Condition="Data.PlayerClass() == WoWClass.Priest">
		<AddRestockItem ItemName="Ice Cold Milk" NpcName="Xandar Goodbeard" UnderAmount="3" BuyAmount="20"/>
		<AddDoNotSellItem ItemName="Ice Cold Milk" />
	</If>
	<!-- Bullets/Arrows -->
